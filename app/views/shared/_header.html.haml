.container
  .row
    .top
      .col-xs-1
        %h1.title
          %a{:href => root_path} Blog

      .col-xs-4
        %div.pull-right
          - if user_signed_in?
            %a.logout{href: destroy_user_session_path, data: {method: 'delete'}}
              = t('logout')

          - else
            %a.my-account{href: new_user_session_path}
              = 'Connexion'
            %a.my-account{href: new_user_registration_path}
              = 'Inscription'
